{
	"name": "srv",
	"description": "Monorepo for a backend application and its cloud AWS IaC.",
	"author": "Fady",
	"packageManager": "yarn@1.22.19",
	"license": "UNLICENSED",
	"version": "0.0.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"engines": {
		"node": "^v18.13.x",
		"yarn": ">=1.22.0",
		"npm": "please-use-yarn"
	},
	"config": {},
	"scripts": {
		"build": "turbo run build",
		"deploy": "turbo run deploy",
		"lint:check": "turbo run lint:check --bail",
		"lint:fix": "turbo run lint:fix",
		"dev": "turbo run dev",
		"test": "turbo run test",
		"clean": "turbo run clean",
		"release": "turbo run build --filter=docs^... && changeset publish",
		"version-packages": "changeset version",
		"changeset": "changeset",
		"root:lint:staged": "yarn lint-staged --allow-empty --concurrent false",
		"root:changeset:add": "yarn changeset add",
		"root:changeset:empty": "yarn changeset add --empty",
		"root:changeset:release": "yarn changeset version",
		"root:changeset:check": "yarn changeset status",
		"root:changeset:tag": "yarn changeset tag",
		"root:changeset:check:main": "yarn changeset status --since-master",
		"prepare": "yarn prepare:husky && yarn prepare:changeset",
		"prepare:husky": "husky install",
		"prepare:changeset": "yarn tsc .changeset/*.ts"
	},
	"dependencies": {},
	"devDependencies": {
		"@changesets/cli": "^2.26.0",
		"@changesets/types": "^5.2.1",
		"@commitlint/cli": "^17.4.4",
		"@commitlint/config-conventional": "^17.4.4",
		"@commitlint/cz-commitlint": "^17.4.4",
		"commitizen": "^4.3.0",
		"commitlint": "^17.4.4",
		"cz-conventional-changelog": "^3.3.0",
		"dotenv": "^16.0.3",
		"dotenv-cli": "^7.0.0",
		"eslint": "^8.34.0",
		"husky": "^8.0.3",
		"inquirer": "^8.2.5",
		"lint-staged": "^13.1.2",
		"npm-check-updates": "^16.7.9",
		"prettier": "^2.8.4",
		"tsconfig-paths": "^4.1.2",
		"turbo": "^1.7.3",
		"typescript": "^4.9.5"
	},
	"peerDependencies": {}
}
