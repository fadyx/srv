{
	"name": "srv",
	"description": "Monorepo for a backend application and its cloud AWS IaC.",
	"author": "Fady",
	"packageManager": "yarn@1.22.19",
	"license": "UNLICENSED",
	"version": "0.0.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"engines": {
		"node": "^v18.13.x",
		"yarn": ">=1.22.0",
		"npm": "please-use-yarn"
	},
	"config": {},
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"test": "turbo run test",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"commit:cz": "yarn cz",
		"release": "turbo run build --filter=docs^... && changeset publish",
		"changeset": "changeset",
		"version-packages": "changeset version",
		"clean": "turbo run clean && rm -rf node_modules",
		"root:lint:staged": "yarn lint-staged --allow-empty --concurrent false",
		"prepare": "yarn prepare:husky && yarn prepare:changeset",
		"prepare:husky": "husky install",
		"prepare:changeset": "yarn tsc .changeset/*.ts",
		"root:deps:check": "yarn npm-check-updates --configFileName ncurc.json --deep",
		"root:deps:update": "yarn npm-check-updates --configFileName ncurc.json  --deep -u -i",
		"root:test:all": "turbo run test",
		"root:changeset:add": "yarn changeset add",
		"root:changeset:empty": "yarn changeset add --empty",
		"root:changeset:release": "yarn changeset version",
		"root:changeset:check": "yarn changeset status",
		"root:changeset:tag": "yarn changeset tag",
		"root:changeset:check:main": "yarn changeset status --since-master",
		"root:upgrade": "yarn upgrade",
		"root:lint:check": "yarn eslint . --quiet",
		"root:lint:write": "yarn eslint . --fix",
		"root:prettier:check": "yarn prettier . --check",
		"root:prettier:write": "yarn prettier . --write",
		"root:purge:dry": "find . -name 'node_modules' -type d -prune",
		"root:purge:execute": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
		"root:infra:bootstrap": "yarn workspace infra bootstrap"
	},
	"dependencies": {},
	"devDependencies": {
		"@changesets/cli": "^2.26.0",
		"@changesets/types": "^5.2.1",
		"@commitlint/cli": "^17.4.2",
		"@commitlint/config-conventional": "^17.4.2",
		"@commitlint/cz-commitlint": "^17.4.2",
		"commitizen": "^4.3.0",
		"commitlint": "^17.4.2",
		"cz-conventional-changelog": "^3.3.0",
		"dotenv": "^16.0.3",
		"dotenv-cli": "^7.0.0",
		"eslint": "^8.33.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.1.0",
		"npm-check-updates": "^16.6.3",
		"prettier": "^2.8.3",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.1.2",
		"turbo": "^1.7.3",
		"typescript": "^4.9.5"
	},
	"peerDependencies": {
		"inquirer": "^8.0.0"
	}
}
